{{#with user}}
<div class="container">
    <div class="form__container">
        <h2 class="title">Editar usuário</h2>
        <form action="/users/edit" method="POST" class="form__content">
            <input type="hidden" name="id" value="{{id}}">
            <div class="form-group">
                <label for="userName" class="form-label">Nome:</label>
                <input type="text" name="name" id="userName" class="form-input" value="{{name}}">
            </div>
            <div class="form-group">
                <label for="userOccupation" class="form-label">Profissão:</label>
                <input type="text" name="occupation" id="userOccupation" class="form-input" value="{{occupation}}">
            </div>
            <div class="form-group">
                {{#if newsletter}}
                <input type="checkbox" name="newsletter" id="newsletter" class="form-input-check" checked>
                {{else}}
                <input type="checkbox" name="newsletter" id="newsletter" class="form-input-check">
                {{/if}}

                <label for="newsletter" class="form-label">Enviar promoções? </label>
            </div>
            <button type="submit" class="btn-submit">Salvar</button>
        </form>
    </div>
    <div class="form__container">
        <h2 class="title">Endereço</h2>
        <form action="/address/create" method="POST" class="form__content">
            <input type="hidden" name="UserId" value="{{id}}">
            <div class="form-group">
                <label for="addressStreet" class="form-label">Rua:</label>
                <input type="text" name="street" id="addressStreet" class="form-input" placeholder="Rua XV">
            </div>
            <div class="form-group">
                <label for="addressNumber" class="form-label">Nº:</label>
                <input type="text" name="number" id="addressNumber" class="form-input" placeholder="1993">
            </div>
            <div class="form-group">
                <label for="addressCity" class="form-label">Cidade:</label>
                <input type="text" name="city" id="addressCity" class="form-input" placeholder="Recife">
            </div>
            <button type="submit" class="btn-submit">Salvar endereço</button>
        </form>
    </div>
</div>
{{/with}}

<div class="card-address__container">
    <h2 class="title">Lista de endereços</h2>
    <div class="cards__container">
    {{#each user.Addresses}}

        <div class="card__content">
            <div class="user__container">
                <div class="user__content">
                    <h3 class="user-title">Rua: {{street}}</h3>
                </div>
                <p class="user-occupation">Nº: {{number}}</p>
                <p class="user-occupation">Cidade: {{city}}</p>
                <div class="btn__container">
                    <form action="/address/delete" method="POST" class="delete-action">
                    <input type="hidden" name="id" value="{{id}}">
                    <input type="hidden" name="UserId" value="{{UserId}}">
                        <button type="submit" class="btn-delete">Excluir</button>
                    </form>
                </div>
            </div>
        </div>
    {{/each}}
    </div>
</div>