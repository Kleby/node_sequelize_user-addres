<div class="form__container">
    <h1 class="title">Adicionar um usuário</h1>
    <form action="/users/create" method="POST" class="form__content">
        <div class="form-group">
            <label for="userName" class="form-label">Nome:</label>
            <input type="text" name="name" id="userName" class="form-input" placeholder="João">
        </div>
        <div class="form-group">
            <label for="userOccupation" class="form-label">Profissão:</label>
            <input type="text" name="occupation" id="userOccupation" class="form-input" placeholder="Desenvolvedor">
        </div>
        <div class="form-group">
            <input type="checkbox" name="newsletter" id="newsletter" class="form-input-check" checked>
            <label for="newsletter" class="form-label">Enviar promoções? </label>
        </div>
        <button type="submit" class="btn-submit">Cadastrar</button>
    </form>
</div>
